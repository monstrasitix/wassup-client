{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "plugins": [
            { "name": "typescript-plugin-css-modules" }
        ],
    },
    "exclude": [
        "node_modules"
    ],
    "types": [
        "typePatches",
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "./generated/documentation",
        "excludeExternals": "true"
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/index.d.ts"
    ]
}